{
  "compilerOptions": {
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
    "outDir": "build",
    "allowJs": true,
    "module": "commonjs",
    "target": "es2019",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "./src/**/*.spec.ts",
    "./src/**/*.spec.js",
    "./integration_tests/**/*.json",
    "./integration_tests/***"
  ]
}
